<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {title: "Nahif Users"})%>

<body>
    <%- include('./partials/header') %>
    <main id="main-registro">

        <div class="userPerfil">

            <h2 class="subtitulo-crear-cuenta">CUENTA</h2>

                <label class="label-perfil">Nombre y apellido</label>
                <div class="nombre-perfil">
                    <p><%= users.nombreCompleto %></p>
                </div>

                <label class="label-perfil">Email</label>
                <div class="email-perfil">
                    <p><%= users.email %></p>
                </div>

                <div>
                    <label class="label-perfil" for="foto-perfil-label">Foto de perfil</label>
                    
                        <% if (users.fotoPerfil != ""){ %>
                            <div>
                                <img class="foto-perfil" src="/img/<%= users.fotoPerfil %>" alt="fotoPerfil">
                            </div>
                        <% } %>
                </div>
                
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>

</html>