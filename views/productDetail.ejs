<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {title: "Nahif Producto"})%>

<body>
    <%- include('./partials/header') %>
    <main class="mainproducto">
        <div class="contenidoProd">
            <div class="producto">
                <h3><%= detalle.nombre %></h3>
                <p>$ <%= detalle.precio %></p>
                <div class="productosC">
                    <% for (let i = 0; (i < detalle.fotosExtra.length) ; i++) { %>
                    <img src="/img/<%= detalle.fotosExtra[i] %>" alt="foto <%= i%>">
                    <% } %>
                </div>
                <div class="principal">
                    <img src="/img/<%= detalle.foto %>" alt="<%= detalle.nombre %>">
                </div>
            </div>
            <div class="unificacion">
                <div class="nombreProdMedia">
                    <h3><%= detalle.nombre %></h3>
                    <p>$ <%= detalle.precio %></p>
                </div>
                <div class="selecciones">
                    <div>
                        <label>Colores Disponibles</label>
                        <select class="colores">
                            <option>Negro</option>
                            <option>Azul</option>
                            <option>Blanco</option>
                        </select>
                    </div>
                    <div>
                        <label>Cantidad</label>
                        <select class="Cantidad">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div>
                        <label>Talles</label>
                        <select class="talles">
                            <option>S</option>
                            <option>M</option>
                            <option>L</option>
                        </select>
                    </div>
                </div>
                <div class="botones">
                    <form action="#" method="get">
                        <button name="botonProbadorProducto" class="botonProbador" type="submit">Añadir al
                            Vestidor</button>
                    </form>
                    <form action="/carrito" method="get">
                        <button name="botonPagarProducto" class="botonPagar" type="submit">Añadir al Carrito</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="productocomplemento">
            <h3>Completa tu look</h3>
            <img src="/img/crop_top.jpg" alt="cropTop">
            <img src="/img/buzo_blend.jpg" alt="buzoBlend">
        </div>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>