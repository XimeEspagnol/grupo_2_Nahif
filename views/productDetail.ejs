<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {title: "Nahif Producto"})%>

<body>
    <%- include('./partials/header') %>
    <main class="mainproducto">
        <div class="contenidoProd">
            <div class="producto">
                <h3><%= detalle.nombre %></h3>
                <p>$ <%= detalle.precio %></p>
                <div class="productosC">
                    <% for (let i = 0; (i < detalle.fotos.length) ; i++) { %>
                    <img src="/img/<%= detalle.fotos[i].filename %>" alt="foto <%= i%>">
                    <% } %>
                </div>
                <div class="principal">
                    <img src="/img/<%= detalle.fotoPpal%>" alt="<%= detalle.nombre %>">
                </div>
            </div>
            <div class="unificacion">
                <div class="nombreProdMedia">
                    <h3><%= detalle.nombre %></h3>
                    <p>$ <%= detalle.precio %></p>
                </div>
                <div class="selecciones">
                    <div>
                        <label>Colores Disponibles</label>
                        <select class="colores">
                            <% for(let i=0;i<detalle.colores.length;i++){ %>
                            <option name="colores"><%= detalle.colores[i] %></option>
                            <% } %>
                        </select>
                    </div>
                    <div>
                        <label>Cantidad</label>
                        <select class="Cantidad">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div>
                        <label>Talles</label>
                        <select class="talles">
                            <% for(let i=0;i<detalle.talles.length;i++){ %>
                                <option name="talles"><%= detalle.talles[i] %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="botones">
                    <form action="#" method="get">
                        <button name="botonProbadorProducto" class="botonProbador" type="submit">Añadir al
                            Vestidor</button>
                    </form>
                    <form action="/carrito" method="get">
                        <button name="botonPagarProducto" class="botonPagar" type="submit">Añadir al Carrito</button>
                    </form>
                    <form action="/products/modificarProd/<%= detalle.id %>" method="get">
                        <button name="botonModifProd" class="botonModifProd" type="submit">Modificar producto</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="productocomplemento">
            <h3>Completa tu look</h3>
            <img src="/img/crop_top.jpg" alt="cropTop">
            <img src="/img/buzo_blend.jpg" alt="buzoBlend">
        </div>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>